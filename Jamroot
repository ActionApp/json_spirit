import os ;

local BOOST_ROOT = [ os.environ BOOST_ROOT ] ;

if $(BOOST_ROOT)
{
   use-project /boost : $(BOOST_ROOT) ;
}

project
   : requirements
      <toolset>gcc:<cxxflags>-ftemplate-depth=300
      <toolset>gcc:<cxxflags>-std=c++0x
      <toolset>gcc:<cxxflags>-Wno-unused-local-typedefs
      <toolset>clang:<cxxflags>-std=c++11
      <toolset>darwin:<cxxflags>-fvisibility=hidden
      <toolset>darwin:<cxxflags>-fvisibility-inlines-hidden
      <toolset>darwin:<cxxflags>-std=c++14
      <toolset>msvc:<cxxflags>/wd4996
      <define>BOOST_SPIRIT_USE_PHOENIX_V3=1
      <use>/boost//headers
   ;

lib json
   : [ glob libs/json/src/*.cpp ]
   : <include>.
     <toolset>msvc:<link>static
   :
   : <include>.
   ;

build-project libs/json/test ;
